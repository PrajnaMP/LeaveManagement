<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:backgroundTint="@color/cream"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/update_employee_leave_name_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/orange"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_employee_leave_name_text"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_sick_leave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/update_employee_leave_linear_layout_name"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/update_employee_leave_sick_leave_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/sick_leave"
            android:textColor="@color/orange"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/update_employee_leave_sick_leave_edit_text"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:textSize="@dimen/twenty_dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_casual_leave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/update_employee_leave_linear_layout_sick_leave"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/update_employee_leave_casual_leave_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/casual_leave"
            android:textColor="@color/orange"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/update_employee_leave_casual_leave_edit_text"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:textSize="@dimen/twenty_dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_earn_leave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/update_employee_leave_linear_layout_casual_leave"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/update_employee_leave_earn_leave_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/earn_leave"
            android:textColor="@color/orange"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/update_employee_leave_earn_leave_edit_text"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:textSize="@dimen/twenty_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_apply_to"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/update_employee_leave_linear_layout_earn_leave"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/update_employee_leave_apply_to_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/apply_to"
            android:textColor="@color/orange"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/update_employee_leave_apply_to_spinner"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:padding="@dimen/ten_dp"
            android:textSize="@dimen/twenty_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_employee_leave_linear_layout_apply_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_employee_leave_linear_layout_apply_to"
        android:gravity="center"
        android:paddingTop="@dimen/thirty_dp">

        <Button
            android:id="@+id/update_employee_leave_update_leave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blu"
            android:text="@string/update_"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/update_employee_leave_sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_dp" />

</RelativeLayout>






