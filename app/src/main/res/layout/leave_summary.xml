<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pista_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/linear_layout_leave_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/leave_type_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/leave_type"
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leave_type_text_"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:text=""
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_from_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/linear_layout_leave_type"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/from_date_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/from_date"
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/from_date_text_"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_to_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/linear_layout_from_date"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/to_date_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/to_date"
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/to_date_text_"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_days"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/linear_layout_to_date"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/days_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/days"
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/days_text_"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:padding="@dimen/ten_dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_five_dp"
        android:layout_below="@+id/linear_layout_days"
        android:layout_marginTop="@dimen/ten_dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <TextView
            android:id="@+id/reason_text_view"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="@string/reason"
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reason_text_"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_weight=".6"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:isScrollContainer="true"
            android:maxLines="3"
            android:minLines="3"
            android:padding="@dimen/ten_dp"
            android:text=""
            android:textColor="@color/blu"
            android:textSize="@dimen/twenty_dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/leave_summary_sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_blue_dark"
        android:text="@string/log_out"
        android:textColor="@color/white"
        android:textSize="@dimen/twenty_dp" />

</RelativeLayout>






