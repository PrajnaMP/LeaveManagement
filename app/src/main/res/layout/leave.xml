<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pista_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prajna.leave.MainActivity">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/ten_dp"
        android:text=""
        android:textColor="@color/blu"
        android:textSize="@dimen/twenty_dp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/grid_layout_sick_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:alignmentMode="alignBounds"
        android:background="@color/light_color"
        android:columnCount="2"
        android:padding="@dimen/five_dp">

        <TextView
            android:id="@+id/sick_leave_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/sick_leave"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

        <TextView
            android:id="@+id/sick_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left|center_vertical"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

    </GridLayout>

    <GridLayout
        android:id="@+id/grid_layout_casual_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_layout_sick_leave"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:alignmentMode="alignBounds"
        android:background="@color/light_color"
        android:columnCount="2"
        android:padding="@dimen/five_dp">

        <TextView
            android:id="@+id/casual_leave_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/casual_leave"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

        <TextView
            android:id="@+id/casual_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left|center_vertical"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

    </GridLayout>

    <GridLayout
        android:id="@+id/grid_layout_earn_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_layout_casual_leave"
        android:layout_marginBottom="@dimen/fifteen_dp"
        android:alignmentMode="alignBounds"
        android:background="@color/light_color"
        android:columnCount="2"
        android:padding="@dimen/five_dp">

        <TextView
            android:id="@+id/earn_leave_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/earn_leave"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

        <TextView
            android:id="@+id/earn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="left|center_vertical"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/twenty_dp" />

    </GridLayout>

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/grid_layout_earn_leave"
        android:background="@color/light_blue"
        android:text="@string/update_"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/grid_layout_earn_leave"
        android:background="@color/light_blue"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:layout_below="@+id/delete_button"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@android:color/holo_green_dark" />

</RelativeLayout>
